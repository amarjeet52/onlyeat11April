<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_radius4_splash_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/value_30"
            android:paddingEnd="@dimen/value_30">


            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/table_vector" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLogo"
                android:layout_centerHorizontal="true"
                android:text="Your table has been booked successfully"
                android:alpha=".6"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />
            <ImageView
                android:id="@+id/ivTick"
                android:layout_marginBottom="@dimen/xlarge_margin"
                android:layout_marginTop="21dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvTitle"
                android:src="@drawable/tick_popup"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>