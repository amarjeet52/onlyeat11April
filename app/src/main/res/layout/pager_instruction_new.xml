<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="color"
            type="com.codebrew.clikat.utils.configurations.ColorConfig" />

        <variable
            name="strings"
            type="com.codebrew.clikat.utils.configurations.TextConfig" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_instruction"
            android:layout_width="282dp"
            android:layout_height="282dp"
            android:contentDescription="@string/instruction"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.22000003"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/instruction_ecommerce_1" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_instruction"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@color/progressBarColor"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_instruction"
            tools:text="jdbvjkbvjv" />

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/small_margin"
            android:fontFamily="@font/poppins_light"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="jdbvjkbvjv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>