<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_serial"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:srcCompat="@drawable/chef"
            android:layout_margin="@dimen/dp_04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/long_desc"
            android:lines="2"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="textStart"
            android:layout_marginBottom="@dimen/dp_04"
            android:layout_marginTop="@dimen/dp_04"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            app:layout_constraintBottom_toBottomOf="@+id/img_serial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_serial"
            app:layout_constraintTop_toTopOf="@+id/img_serial" />

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:lines="1"
            android:ems="1"
            android:textAlignment="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/img_serial"
            app:layout_constraintBottom_toBottomOf="@+id/img_serial"
            app:layout_constraintEnd_toEndOf="@+id/img_serial"
            app:layout_constraintTop_toTopOf="@+id/img_serial" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>