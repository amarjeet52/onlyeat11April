<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_shadow"/>
            <corners android:radius="@dimen/_8sdp"
         />
        </shape>
    </item>

    <item

        android:right="@dimen/_1sdp"
        android:bottom="@dimen/_2sdp"
        android:top="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
 >
        <shape android:shape="rectangle">

            <gradient android:startColor="@color/white"
                android:centerColor="#f3f3f3"
                android:endColor="#f8f8f8"
                android:angle="270"
                />
            <stroke android:color="@color/white"
                android:width="@dimen/_2sdp"/>
            <corners android:radius="@dimen/_8sdp"/>
        </shape>
    </item>
</layer-list>